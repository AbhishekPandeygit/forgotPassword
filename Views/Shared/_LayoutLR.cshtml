@{
    Layout = "";
}
<html>
<head>


    <link href="~/lib/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="~/css/site.css" rel="stylesheet" />
    <script src="~/lib/jquery/dist/jquery.min.js"></script>

</head>

<body>

    <div class="row justify-content-center">
        <div class="col-4 mt-5">

            <div class="card login-logout-class">
                <div class="card-header">
                    <ul class="nav nav-tabs card-header-tabs">
                        <li class="nav-item">
                            <a class="nav-link" asp-action="Login" asp-controller="Account">Login</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-action="Register" asp-controller="Account">Register</a>
                        </li>
                    </ul>
                </div>
                <div class="card-body">
                    <div class="row justify-content-center">
                        <div action="col-8 offset-2">
                            @RenderBody()
                        </div>
                    </div>
                </div>

            </div>
        </div>




    </div>
    @section scripts1{
        @await RenderSectionAsync("Scripts", required: false)
        <script>
            $(function () {
                let currentPage = location.pathname;
                $('.nav-tabs li a').each(function () {
                    let $this = $(this);
                    if (currentPage.toLowerCase().indexOf($this.attr('href').toLowerCase()) !== -1) {
                        $(this).addClass('active');
                    }
                })
            })
        </script>
    }

    @await RenderSectionAsync("scripts1", required: false)
    @await RenderSectionAsync("scripts", required: false)

</body>
</html>